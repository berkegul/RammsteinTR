<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.UyelerActivity">

    <ImageView
        android:id="@+id/imgKAPAK"
        android:layout_width="415dp"
        android:layout_height="202dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/rcvUyeler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/banner" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvUyeler"
        android:layout_width="@dimen/layoutheigh447dp"
        android:layout_height="@dimen/layoutheigh447dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgKAPAK"
        app:layout_constraintVertical_bias="0.0"
        tools:listitem="@layout/cardview_uyeler" />

</androidx.constraintlayout.widget.ConstraintLayout>