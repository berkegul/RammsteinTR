<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/txtpadding"
        android:layout_marginTop="@dimen/marginTOP5"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ExtraText">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/rcv395"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgUYE"
                android:layout_width="@dimen/fotografwidth"
                android:layout_height="@dimen/fotografheigh"
                android:layout_marginStart="@dimen/txtpadding"
                android:layout_marginTop="@dimen/txtpadding"
                android:layout_marginBottom="@dimen/txtpadding"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/txtAdiSoyadi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/txtpadding"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/imgUYE"
                app:layout_constraintTop_toTopOf="@+id/imgUYE" />

            <TextView
                android:id="@+id/txtDogumTarihi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/txtpadding"
                android:text="TextView"
                app:layout_constraintBottom_toTopOf="@+id/txtDogumYeri"
                app:layout_constraintStart_toEndOf="@+id/imgUYE"
                app:layout_constraintTop_toBottomOf="@+id/txtAdiSoyadi" />

            <TextView
                android:id="@+id/txtDogumYeri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/txtpadding"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/imgUYE"
                app:layout_constraintTop_toBottomOf="@+id/txtDogumTarihi" />

            <TextView
                android:id="@+id/txtMeslegi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/txtpadding"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/imgUYE"
                app:layout_constraintTop_toBottomOf="@+id/txtDogumYeri" />

            <TextView
                android:id="@+id/txtCaldıgıEnsturmanlar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/txtpadding"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/imgUYE"
                app:layout_constraintTop_toBottomOf="@+id/txtMeslegi" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>